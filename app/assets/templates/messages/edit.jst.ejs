<div class="message_edit">
<h2> Edit Message </h2>

<form class="message_edit form-horizontal" id="<%= message.id %>">
  <label for="message_title">Title:</label>
  <input id="message_title" type="text" value="<%=message.escape("title")%>">
  <br>
  <label for="message_content">Content:</label>
  <!-- <input id="message_content" rows="10" col="20"></textarea> -->
  <input id="message_content" type="text" value="<%=message.escape("content")%>">
  <br>
  <label for="message_timer">Timer:</label>
  <input id="message_timer" type="number" min=1 max =10  value=<%=message.escape("timer")%>>
  <br>
  <button class="cancel">Cancel</button>
  <input type="submit">
</form>
</div>