<h1>Questions?</h1>

<%= form_for @emailer do |f| %>
  <% if @emailer.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@emailer.errors.count, "error") %> prohibited this message from being saved:</h2>
      <ul>
      <% @emailer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :content, "Message" %><br />
    <%= f.text_area :content, :rows => 5 %>
  </div>
  <div class="actions"><%= f.submit "Send Message", class: "btn btn-primary" %></div>
<% end %>